{
  "name": "the-front-end",
  "version": "0.0.2",
  "description": "Leo's Blog",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cd ./config && webpack-dev-server --config dev.webpack.js",
    "pro": "cd ./config && npx webpack --config pro.webpack.js",
    "tailwind:css": "tailwind build src/css/tailwind.src.css -c tailwind.js -o src/css/tailwind.css",
    "commit": "git add . && git-cz",
    "version": "standard-version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog-all": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "go-eslint": "eslint -c .eslintrc.js ./src/*",
    "go": "npm run version && npm run changelog"
  },
  "author": "Leo",
  "license": "MIT",
  "dependencies": {
    "@types/codemirror": "0.0.90",
    "@types/marked": "^0.7.3",
    "@types/prismjs": "^1.16.0",
    "autoprefixer": "^9.7.5",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "codemirror": "^5.52.2",
    "github-markdown-css": "^4.0.0",
    "marked": "^0.8.2",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/react-router-dom": "^5.1.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@svgr/cli": "^5.3.1",
    "@svgr/webpack": "^5.3.1",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "css-loader": "^3.4.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.4",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "node-sass": "^4.13.1",
    "npm-check-updates": "^4.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.3",
    "sass-loader": "^8.0.2",
    "standard-version": "^7.1.0",
    "style-loader": "^1.1.3",
    "svg-url-loader": "^5.0.0",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js, ts, tsx, scss}": [
      "prettier --write",
      "git add"
    ],
    "**/*.ts?(x)": [
      "eslint --fix",
      "git add"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "commit": true,
      "changelog": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
