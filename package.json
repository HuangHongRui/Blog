{
  "name": "the-front-end",
  "version": "0.0.2",
  "description": "Leo's Blog",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cd ./config && webpack-dev-server --config dev.webpack.js",
    "tailwind:css": "tailwind build src/css/tailwind.src.css -c tailwind.js -o src/css/tailwind.css",
    "commit": "git add . && git-cz",
    "version": "standard-version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog-all": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "go-eslint": "eslint -c .eslintrc.js ./src/*",
    "go": "npm run version && npm run changelog"
  },
  "author": "Leo",
  "license": "MIT",
  "dependencies": {
    "@types/classnames": "^2.2.9",
    "@types/react-router-dom": "^5.1.3",
    "classnames": "^2.2.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@svgr/webpack": "^5.0.1",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "css-loader": "^3.4.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "standard-version": "^7.0.1",
    "style-loader": "^1.1.2",
    "svg-url-loader": "^3.0.3",
    "typescript": "^3.7.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js, ts, tsx, scss}": [
      "prettier --write",
      "git add"
    ],
    "**/*.ts?(x)": [
      "eslint --fix",
      "git add"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "commit": true,
      "changelog": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
